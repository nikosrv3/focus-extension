{
    "name" : "Be Creative",
    "description": "A nnew way to be productive",
    "version": "0.0.1",

    "manifest_version": 3,

    "action": {
        "default popup": "./popup.html"
    },

    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "css": ["contentScripts.css"],
            "js": ["contentScripts.js"]
        }
    ],

    "background": {
        "service_worker": "background.js"
    },

    "permissions": ["tabs", "activeTab", "storage"],

    "host_permissions": [
        "<all_urls>"
    ]

}